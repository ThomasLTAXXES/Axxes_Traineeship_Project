@model Who.Web.Models.RoundViewModel

@{
    /**/

    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-xs-6 text-center">
        <h5>WHO'S</h5>
        <h3>@Model.Name</h3>
    </div>
    <div class="col-xs-6 text-center">
        <h5>@Model.RoundIndex / @Model.TotalRounds</h5>
    </div>
</div>
<div class="row">
    @for (int i = 0; i < Model.Images.Count; i++)
    {
        if (i % 2 == 0)
        {
            <div class="col-xs-6 col-sm-offset-3 col-sm-3">
                <a href="@Url.Action("Guess", new { id= Model.Images[i].Id })">
                    <figure>
                        <img class="img-responsive img-game" src=@Model.Images[i].Url alt="NiceTry!">
                    </figure>
                </a>
            </div>
        }
        else
        {
            <div class="col-xs-6 col-sm-3">
                <a href="@Url.Action("Guess", new { id= Model.Images[i].Id })">
                    <figure>
                        <img class="img-responsive img-game" src=@Model.Images[i].Url alt="NiceTry!">
                    </figure>
                </a>
            </div>
            <div class="clearfix"></div>
        }
    }
</div>
