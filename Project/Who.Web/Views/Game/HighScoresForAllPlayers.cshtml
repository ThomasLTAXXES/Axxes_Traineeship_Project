@model List<Who.Web.Models.ScoreViewModel>

@{
    ViewBag.Title = "HighScoresForAllPlayers";
}

<h2>HighScoresForAllPlayers</h2>

<table class="table">
    <tr>
        <th>
            Rank
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].FullName)
        </th>
        <th>
            Score
        </th>
    </tr>

    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>
                @(i +1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].FullName)
            </td>
            <td>
                @Model[i].AmountOfCorrectAnswers  /  @Model[i].AmountOfRoundsPerGame ( @Model[i].Duration) x  @Model[i].AmountOfGamesPlayed
            </td>
        </tr>
    }

</table>
